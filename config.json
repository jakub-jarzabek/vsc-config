// Indent Line Numbers
  "indenticator.color.dark": "#ffc0cb",
  "indenticator.color.light": "#ffc0cb",

  // Improvements
  "editor.quickSuggestionsDelay": 0,
  "diffEditor.ignoreTrimWhitespace": false,

  // Colors
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#fff",
    "editorLineNumber.foreground": "#444",
    "editor.lineHighlightBackground": "#ffc0cb27"
  },
  // Line Cursor

  // ESLint / Prettier config
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["javascript", "typescript"], // ,
  "eslint.codeAction.disableRuleComment": {
    "enable": false,
    "location": "separateLine"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "html.format.wrapAttributes": "aligned-multiple",
  "bladeFormatter.format.wrapAttributes": "preserve",
  "html.format.wrapLineLength": 400,
  "editor.formatOnSave": true,
  "editor.fontSize": 18,
  "terminal.integrated.fontSize": 14,
  "workbench.tree.indent": 20,
  "editor.fontWeight": "500",
  "editor.fontFamily": "'JetBrains Mono','Fira Code',monospace", // Operator Mono
  "editor.fontLigatures": false,
  "editor.wordWrap": "off",
  "editor.tabSize": 2,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": false,
  "workbench.iconTheme": "material-icon-theme", // 4
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "on",
  "editor.cursorWidth": 4,
  "editor.parameterHints.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.padding.top": 30,

  "window.title": "${activeEditorMedium}${separator}${rootName} ${dirty}",
  "vscode_custom_css.imports": ["file:///Users/Adam/.vscode/hide-top-bar.css"],
  "vscode_custom_css.policy": true,
  "editor.overviewRulerBorder": false,
  "editor.hover.enabled": true,
  "quokka.suppressGlyphMarginNotifications": false,
  "editor.quickSuggestions": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.showTypeParameters": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordBasedSuggestions": false,

  // Exclude folders
  "search.exclude": {
    "**/dist": true,
    "**/.history": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sass-cache": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.sass-cache": true,
    "**/public/blog": true,
    "**/.history": true,
    "**/tmp": true,
    "**/.cache": true,
    "**/.vscode": true,
    ".idea/": true
  },

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",

  "workbench.startupEditor": "none",
  "explorer.confirmDelete": false,
  "open-in-browser.default": "brave",
  "workbench.tree.renderIndentGuides": "none",
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.matchBrackets": "never",
  "editor.renderLineHighlight": "line",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Dracula Soft",
  "workbench.editor.showTabs": false,

  // Breadcrumbs settings
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.icons": false,
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,

  "tabnine.experimentalAutoImports": true,

  // Live server
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,

  // Vim
  "files.autoSave": "onFocusChange",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.easymotionMarkerooundColor": "#020202",
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.view.explorer"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["g", "c", "c"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["g", "l"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    },

    {
      "before": ["<leader>", "t", "u"],
      "commands": ["editor.action.transformToUppercase"]
    },
    {
      "before": ["<leader>", "t", "l"],
      "commands": ["editor.action.transformToLowercase"]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    // VS Code new marker @ next occurence
    "<C-d>": false,
    // Copy
    "<C-c>": false,
    // Cut
    "<C-x>": false,
    // Paste
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  }
}

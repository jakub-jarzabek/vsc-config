{
  // Improvements
  "editor.quickSuggestionsDelay": 0,
  "diffEditor.ignoreTrimWhitespace": false,

  // Colors
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#fff",
    "editorLineNumber.foreground": "#444",
    "editorCursor.foreground": "#d323d9",
    "terminalCursor.foreground": "#d323d9"
  },

  // ESLint / Prettier config
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  // Formaters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["javascript", "typescript"], // ,
  "eslint.codeAction.disableRuleComment": {
    "enable": false,
    "location": "separateLine"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "html.format.wrapAttributes": "aligned-multiple",
  "bladeFormatter.format.wrapAttributes": "preserve",
  "html.format.wrapLineLength": 400,
  "editor.formatOnSave": true,
  "editor.fontSize": 16,
  "files.autoSave": "onFocusChange",
  "workbench.tree.indent": 20,
  "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "300",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": false,
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.lineNumbers": "on",
  "editor.cursorWidth": 4,
  "editor.parameterHints.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.padding.top": 30,
  "trailing-spaces.trimOnSave": true,
  "highlight-matching-tag.styles": {
    "opening": {
      "full": {
        "highlight": "rgba(20, 180, 80, 0.3)"
      }
    },
    "closing": {
      "full": {
        "highlight": "rgba(20, 180, 80, 0.3)"
      }
    }
  },
  "window.title": "${activeEditorMedium}${separator}${rootName} ${dirty}",
  "editor.overviewRulerBorder": false,
  "editor.hover.enabled": true,
  "quokka.suppressGlyphMarginNotifications": false,
  "editor.quickSuggestions": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.showTypeParameters": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordBasedSuggestions": false,

  // Exclude folders
  "search.exclude": {
    "**/dist": true,
    "**/.history": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sass-cache": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.sass-cache": true,
    "**/public/blog": true,
    "**/.history": true,
    "**/tmp": true,
    "**/.cache": true,
    "**/node_modules": true,
    "**/.vscode": true,
    ".idea/": true
  },

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "explorer.confirmDelete": false,
  "open-in-browser.default": "brave",
  "workbench.tree.renderIndentGuides": "none",
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.matchBrackets": "never",
  "editor.renderLineHighlight": "none",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Material Theme Ocean High Contrast",
  "workbench.editor.showTabs": false,

  // Breadcrumbs settings
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.icons": false,
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,

  "tabnine.experimentalAutoImports": true,

  // Terminal
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "monospace",
  "window.zoomLevel": 1
}
